<%
	let folderUploads = 'uploads/articles/';
%>
<div class="site-main-container">
	<!-- Start latest-post Area -->
	<section class="latest-post-area pb-120">
		<div class="container no-padding">
			<div class="row">
				<div class="col-lg-8 post-list">
					<!-- Start latest-post Area -->
					<div class="latest-post-wrap">
						<h4 class="cat-title">Category</h4>
						
						<% listCategorys.forEach( (data, index) =>{ %>
							<div class="single-latest-post row align-items-center">
								<div class="col-lg-5 post-left">
									<div class="feature-img relative">
										<div class="overlay overlay-bg"></div>
										<img class="img-fluid" src="<%= folderUploads + data.thumb %>" alt="">
									</div>
									<ul class="tags">
										<li><a href="#"><%= data.categorys.name %></a></li>
									</ul>
								</div>
								<div class="col-lg-7 post-right">
									<a href="article/<%= data.id %>">
										<h4><%= data.name %></h4>
									</a>
									<ul class="meta">
										<li><a href="#"><span class="lnr lnr-user"></span><%= data.created.user_name %></a></li>
										<li><a href="#"><span class="lnr lnr-calendar-full"></span><%= moment(data.created.time).format(systemConfig.formatFrontend) %></a></li>
										<li><a href="#"><span class="lnr lnr-bubble"></span>06 Comments</a></li>
									</ul>
									<p>
										<%- data.content.replace(/(<([^>]+)>)/img, '').substr(0, 30) %>......
									</p>
								</div>
							</div>
							
					   	<% }) %>

						   <!--LOAD MORD-->
						<div class="load-more">
							<a href="#" class="primary-btn">Load More Posts</a>
						</div>

												
					</div>
					<!-- End latest-post Area -->
				</div>
				<div class="col-lg-4">
					<div class="sidebars-area">
						<div class="single-sidebar-widget most-popular-widget">
							<h6 class="title">Most Popular</h6>
							<% itemsRandom.forEach( (data) =>{ %>
								<div class="single-list flex-row d-flex">
									<div class="thumb">
										<img src="uploads/articles/<%= data.thumb %>" style="width: 250px; height: 210px;" alt="">
									</div>
									<div class="details">
										<a href="/article/<%= data._id %>">
											<h6><%= data.name %></h6>
										</a>
										<ul class="meta">
											<li><a href="#"><span class="lnr lnr-calendar-full"></span><%= moment(data.created.time).format(systemConfig.formatFrontend) %></a></li>
											<li><a href="#"><span class="lnr lnr-bubble"></span>06</a></li>
										</ul>
									</div>
								</div>
							<% }) %>
							
						</div>
						<div class="single-sidebar-widget social-network-widget">
							<h6 class="title">Social Networks</h6>
							<ul class="social-list">
								<li class="d-flex justify-content-between align-items-center fb">
									<div class="icons d-flex flex-row align-items-center">
										<i class="fa fa-facebook" aria-hidden="true"></i>
										<p>983 Likes</p>
									</div>
									<a href="#">Like our page</a>
								</li>
								<li class="d-flex justify-content-between align-items-center tw">
									<div class="icons d-flex flex-row align-items-center">
										<i class="fa fa-twitter" aria-hidden="true"></i>
										<p>983 Followers</p>
									</div>
									<a href="#">Follow Us</a>
								</li>
								<li class="d-flex justify-content-between align-items-center yt">
									<div class="icons d-flex flex-row align-items-center">
										<i class="fa fa-youtube-play" aria-hidden="true"></i>
										<p>983 Subscriber</p>
									</div>
									<a href="#">Subscribe</a>
								</li>
								<li class="d-flex justify-content-between align-items-center rs">
									<div class="icons d-flex flex-row align-items-center">
										<i class="fa fa-rss" aria-hidden="true"></i>
										<p>983 Subscribe</p>
									</div>
									<a href="#">Subscribe</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End latest-post Area -->
</div>
